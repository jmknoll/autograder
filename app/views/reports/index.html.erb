<p>Input Score Here</p>

<%= form_for @report do |f| %>
	<%= f.label(:reading_score, "Reading") %>
	<%= f.number_field(:reading_score, in: 0..67) %>
	<%= f.label(:math_score, "Math") %>
	<%= f.number_field(:math_score, in: -6..54) %>
	<%= f.submit "Get Report" %>
<% end %>

